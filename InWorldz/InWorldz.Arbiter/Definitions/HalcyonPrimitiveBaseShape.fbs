include "Vector3.fbs";

namespace InWorldz.Arbiter.Serialization;

enum ProfileShape : byte {
    Circle = 0,
    Square = 1,
    IsometricTriangle = 2,
    EquilateralTriangle = 3,
    RightTriangle = 4,
    HalfCircle = 5
}

enum HollowShape : byte {
    Same = 0,
    Circle = 16,
    Square = 32,
    Triangle = 48
}

table HalcyonPrimitiveBaseShape {
	profile_curve:ubyte;
	texture_entry:[ubyte];
	extra_params:[ubyte];
	path_begin:ushort;
	path_curve:ubyte;
	path_end:ushort;
	path_radius_offset:byte;
	path_revolutions:ubyte;
	path_scale_x:ubyte;
	path_scale_y:ubyte;
	path_shear_x:ubyte;
	path_shear_y:ubyte;
	path_twist:byte;
	path_twist_begin:byte;
	pcode:ubyte;
	profile_begin:ushort;
	profile_end:ushort;
	profile_hollow:ushort;
	scale:Vector3;
	state:ubyte;
	profile_shape:ProfileShape;
	hollow_shape:HollowShape;
	sculpt_texture:[ubyte];
	sculpt_type:ubyte;
	flexi_softness:int;
	flexi_tension:float;
	flexi_drag:float;
	flexi_gravity:float;
	flexi_wind:float;
	flexi_force_x:float;
	flexi_force_y:float;
	flexi_force_z:float;
	light_color:[float];
	light_radius:float;
	light_cutoff:float;
	light_intensity:float;
	flexi_entry:bool;
	light_entry:bool;
	sculpt_entry:bool;
	projection_entry:bool;
	projection_texture_id:[ubyte];
	projection_fov:float;
	projection_focus:float;
	projection_ambiance:float;
	path_skew:byte;
	path_taper_x:byte;
	path_taper_y:byte;
	vertex_count:int;
	high_lod_bytes:int;
	mid_lod_bytes:int;
	low_lod_bytes:int;
	lowest_lod_bytes:int;
}
